generator client {
    provider = "prisma-client"
    output   = "../app/generated/prisma"
}

datasource db {
    provider = "mysql"
}

model User {
    id             Int     @id @default(autoincrement())
    handle         String  @unique @db.Char(16)
    name           String
    email          String  @unique
    hashedPassword String  @db.Text
    description    String? @db.VarChar(300)

    posts     Post[]
    following Following[] @relation("FollowerToFollowing")
    follower  Following[] @relation("FollowingToFollower")
    blocking  Blocking[]  @relation("BlockerToBlocked")
    blockedBy Blocking[]  @relation("BlockedToBlocker")
    likes     Like[]
}

model Following {
    followerId  Int
    followingId Int
    createAt    DateTime @default(now())

    follower  User @relation("FollowerToFollowing", fields: [followerId], references: [id])
    following User @relation("FollowingToFollower", fields: [followingId], references: [id])

    @@id([followerId, followingId])
}

model Blocking {
    blockerId Int
    blockedId Int
    createdAt DateTime @default(now())

    blocker User @relation("BlockerToBlocked", fields: [blockedId], references: [id])
    blocked User @relation("BlockedToBlocker", fields: [blockerId], references: [id])

    @@id([blockerId, blockedId])
}

model Post {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    content   String   @db.LongText

    authorId Int
    author   User @relation(fields: [authorId], references: [id])

    likes Like[]

    parentId Int?
    parent   Post? @relation("Parent", fields: [parentId], references: [id])

    replies Post[] @relation("Parent")
}

model Like {
    postId    Int
    likerId   Int
    createdAt DateTime @default(now())

    post  Post @relation(fields: [postId], references: [id])
    liker User @relation(fields: [likerId], references: [id])

    @@id([postId, likerId])
}
